                      </Col>
                      <Col md={2}>
                        <Form.Control
                          placeholder="Age class"
                          name="ageClass"
                          value={s.ageClass}
                          onChange={(e) => handleSpeciesChange(idx, e)}
                        />
                      </Col>
                      <Col md={1} className="text-end">
                        {idx === 0 ? (
                          <Button variant="success" size="sm" onClick={addSpeciesRow}>
                            +
                          </Button>
                        ) : (
