import {
  Form,
  Button,
  Row,
  Col,
  Card,
  Modal,
  Alert,
  Badge,
  InputGroup,
} from "react-bootstrap";

// IMPORTANT: In src/index.jsx add:
// import 'bootstrap/dist/css/bootstrap.min.css';

